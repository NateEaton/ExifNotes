<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppTheme.OldAlertDialog</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/shared_element_transition</item>
    </style>

    <style name="IconButton.Outline" parent="Widget.Material3.Button.IconButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="IconButton.Tonal" parent="Widget.Material3.Button.IconButton">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="iconTint">?attr/colorOnPrimaryContainer</item>
    </style>

    <!-- Custom style to color the settings activity's icons -->
    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:tint">#1C1B1F</item>
    </style>

    <!-- Custom style to apply to legacy AlertDialogs -->
    <style name="AppTheme.OldAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>
</resources>