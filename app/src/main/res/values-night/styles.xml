<resources>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="iconTintColorPrimary">@color/light_grey</item>
        <item name="iconTintColorSecondary">@color/mid_dark_grey</item>
        <item name="iconTintColorTertiary">@color/background_frame_dark_grey</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppTheme.OldAlertDialog</item>
    </style>

    <!-- Custom style to color the settings activity's icons -->
    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:tint">#E6E1E5</item>
    </style>

    <!-- Custom style to apply to legacy AlertDialogs -->
    <style name="AppTheme.OldAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>
</resources>