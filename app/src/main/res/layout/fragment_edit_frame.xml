<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <!-- We set the root layout to be focusableInTouchMode so that the notes EditText
     doesn't get focus when the Dialog is first shown. -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            app:navigationIconTint="?attr/colorControlNormal"
            app:title="@string/EditFrame">
            <Button
                android:id="@+id/positive_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                app:icon="@drawable/ic_baseline_done_24"
                app:iconGravity="textStart"
                android:text="@string/Save"
                />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nested_scroll_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/FrameCount"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="@dimen/FrameDialogSidePadding"
                style="@style/TextAppearance.Material3.BodySmall"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/FrameDialogSidePadding">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/guideline"
                    app:layout_constraintGuide_percent="0.5"
                    android:orientation="vertical"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frame_count_menu"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.tommihirvonen.exifnotes.views.DateTimeLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/FrameDialogSidePadding"
                app:label="@string/Date"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="@dimen/FrameDialogSidePadding">
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:id="@+id/guideline_aperture_shutter"
                    app:layout_constraintGuide_percent="0.55"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/aperture_label"
                    android:text="@string/Aperture"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guideline_aperture_shutter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/aperture_menu"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/aperture_label"
                    app:layout_constraintRight_toLeftOf="@id/aperture_edit_image_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="10dp">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:id="@+id/aperture_edit_image_view"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_outline_edit_24"
                    app:layout_constraintTop_toTopOf="@id/aperture_menu"
                    app:layout_constraintBottom_toBottomOf="@id/aperture_menu"
                    app:layout_constraintRight_toRightOf="@id/guideline_aperture_shutter"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ShutterSpeed"
                    android:id="@+id/shutter_speed_label"
                    android:layout_marginHorizontal="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/guideline_aperture_shutter"
                    style="@style/TextAppearance.Material3.BodySmall"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/shutter_speed_menu"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@id/shutter_speed_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/guideline_aperture_shutter">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/lens_layout"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/iconTintColorSecondary" />

                <!--LENS-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/Lens"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/lens_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="95dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="7dp"
                        android:text="@string/ClickToSet"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/add_lens"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/FrameDialogImageMargin"
                    android:text="@string/New"
                    app:icon="@drawable/ic_baseline_add_24" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!--FILTER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/filter_layout"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/FilterOrFilters"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="95dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/filter_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/add_filter"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/FrameDialogImageMargin"
                    android:text="@string/New"
                    app:icon="@drawable/ic_baseline_add_24" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <!--FOCAL LENGTH-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/focal_length_layout"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/FrameDialogSidePadding"
                android:paddingRight="@dimen/FrameDialogSidePadding"
                tools:ignore="KeyboardInaccessibleWidget">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/FocalLengthSingleLine"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textSize="15sp"
                    android:id="@+id/focal_length_text"
                    android:text="@string/ClickToSet"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--LOCATION-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/location_layout"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/Location"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:layout_marginRight="95dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/location_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/location_progress_bar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/clear_location"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/clear_location"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/FrameDialogImageMargin"
                    android:text="@string/Clear"
                    app:icon="@drawable/ic_baseline_close_24" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical2_005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

                <!--EXPOSURE COMP-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/exposure_comp_layout"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="@id/guideline_vertical2_005"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/ExposureComp"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                    <Spinner
                        android:id="@+id/exposure_comp_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:prompt="@string/ChooseExposureComp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <!--NO OF EXPOSURES-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_vertical2_005"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/NoOfExposuresSingleLine"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/no_of_exposures_spinner"
                        android:entries="@array/NoOfExposures"
                        android:prompt="@string/ChooseNoOfExposures"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical3_005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <!--FLASH-->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/flash_layout"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="@id/guideline_vertical3_005"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="KeyboardInaccessibleWidget"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            android:text="@string/Flash"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textSize="17sp"
                            />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/flash_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp">

                    </CheckBox>

                </RelativeLayout>

                <!--LIGHT SOURCE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/FrameDialogSidePadding"
                    android:paddingRight="@dimen/FrameDialogSidePadding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_vertical3_005"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/LightSource"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/light_source_spinner"
                        android:entries="@array/LightSource"
                        android:prompt="@string/LightSource"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingBottom="20dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                android:layout_marginHorizontal="@dimen/RollDialogSidePadding">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_editText"
                    android:inputType="textMultiLine|textCapSentences"
                    android:hint="@string/DescriptionOrNote"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--COMPLEMENTARY PICTURE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/picture_layout"
                android:paddingLeft="@dimen/FrameDialogSidePadding"
                android:paddingRight="@dimen/FrameDialogSidePadding"
                android:background="?android:attr/selectableItemBackground"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/ComplementaryPicture"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textSize="15sp"
                    android:id="@+id/picture_text"
                    />

                <com.tommihirvonen.exifnotes.utilities.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:id="@+id/iv_picture"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>