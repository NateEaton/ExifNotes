<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="5dp"
            android:id="@+id/picker_one_fast_rewind"
            android:background="?android:attr/selectableItemBackground">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_fast_rewind_black_48dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:duplicateParentState="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/number_picker_one"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/picker_one_fast_forward"
            android:padding="5dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+50"/>

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_fast_forward_black_48dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.5"
                android:duplicateParentState="true"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_remove_black_48dp"
        android:layout_gravity="center"
        android:alpha="0.5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="5dp"
            android:id="@+id/picker_two_fast_rewind"
            android:background="?android:attr/selectableItemBackground">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_fast_rewind_black_48dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.5"
                android:duplicateParentState="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/number_picker_two"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="5dp"
            android:id="@+id/picker_two_fast_forward"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+50"/>
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_fast_forward_black_48dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.5"
                android:duplicateParentState="true"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

