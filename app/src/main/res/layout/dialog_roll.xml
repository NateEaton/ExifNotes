<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <include
        android:id="@id/title"
        layout="@layout/layout_title" />

    <!-- We set the root layout to be focusableInTouchMode so that the notes EditText
     doesn't get focus when the Dialog is first shown. -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:id="@+id/nested_scroll_view"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--NAME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/Name"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_editText"
                    android:inputType="textCapSentences"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <!--FILM STOCK-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/film_stock_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/FilmStock"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/film_stock_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/add_film_stock"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/New"
                    app:icon="@drawable/ic_baseline_add_24" />

                <Button
                    android:id="@+id/clear_film_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:icon="@drawable/ic_baseline_close_24"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/Clear"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingTop="7dp"
                    android:text="@string/LoadedOn"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <!--DATE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/time_layout"
                    android:clickable="true"
                    android:id="@+id/date_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/date_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <!--TIME-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/date_layout"
                    android:id="@+id/time_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="15sp"
                        android:id="@+id/time_text"
                        android:text=""
                        />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingTop="7dp"
                    android:text="@string/UnloadedOn"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <!--DATE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/time_unloaded_layout"
                    android:clickable="true"
                    android:id="@+id/date_unloaded_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/date_unloaded_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <!--TIME-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/date_unloaded_layout"
                    android:id="@+id/time_unloaded_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="15sp"
                        android:id="@+id/time_unloaded_text"
                        android:text=""
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/clear_date_unloaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_close_24"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/Clear"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingTop="7dp"
                    android:text="@string/DevelopedOn"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <!--DATE-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/time_developed_layout"
                    android:clickable="true"
                    android:id="@+id/date_developed_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/date_developed_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <!--TIME-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/date_developed_layout"
                    android:id="@+id/time_developed_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textSize="15sp"
                        android:id="@+id/time_developed_text"
                        android:text=""
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/clear_date_developed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_close_24"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/Clear"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding"
                >

                <!--CAMERA-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:id="@+id/camera_layout"
                    android:background="?android:attr/selectableItemBackground"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/Camera"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginRight="60dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingTop="5dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textSize="15sp"
                        android:id="@+id/camera_text"
                        android:text="@string/ClickToSet"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/add_camera"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/New"
                    app:icon="@drawable/ic_baseline_add_24" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <!--ISO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/iso_layout"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/ISO"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:paddingTop="5dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textSize="15sp"
                    android:id="@+id/iso_text"
                    android:text="@string/ClickToSet"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical1_005"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <!--PUSH/PULL-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="@id/guideline_vertical1_005"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/push_pull_layout"
                    tools:ignore="KeyboardInaccessibleWidget">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/PushPull"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/push_pull_spinner"
                        android:entries="@array/CompValues"
                        android:prompt="@string/PushPull"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>


                <!--FORMAT-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_vertical1_005"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/format_layout"
                    tools:ignore="KeyboardInaccessibleWidget">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="7dp"
                        android:text="@string/Format"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textSize="17sp"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/format_spinner"
                        android:entries="@array/FilmFormats"
                        android:prompt="@string/ChooseFormat"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/iconTintColorSecondary" />

            <!--NOTE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/note_layout"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/RollDialogSidePadding"
                android:paddingRight="@dimen/RollDialogSidePadding"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="@string/DescriptionOrNote"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textSize="17sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_editText"
                    android:inputType="textCapSentences"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>