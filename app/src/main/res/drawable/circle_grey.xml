<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Add white stroke so that the circle separates from the grey background if dark theme is selected -->
    <stroke
        android:color="@color/near_white"
        android:width="1dp"
        />

    <size
        android:width="50dp"
        android:height="50dp"
        />

    <solid
        android:color="@color/ui_grey"
        />

</shape>