<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/General_Cap">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="AlwaysShowLensSelection"
            android:title="@string/AlwaysShowLensSelectionTitle"
            android:summary="@string/AlwaysShowLensSelectionSummary"/>

        <ListPreference
            android:key="ShutterIncrements"
            android:title="@string/ShutterIncrementsTitle"
            android:entries="@array/StopIncrements"
            android:entryValues="@array/StopIncrementsData"
            android:defaultValue="third"/>

        <ListPreference
            android:key="ApertureIncrements"
            android:title="@string/ApertureIncrementsTitle"
            android:entries="@array/StopIncrements"
            android:entryValues="@array/StopIncrementsData"
            android:defaultValue="third"/>

    </PreferenceCategory>


</PreferenceScreen>